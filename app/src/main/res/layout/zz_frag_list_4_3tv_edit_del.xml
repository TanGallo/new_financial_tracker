<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/list4EditBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_edit_black_24dp" />

        <ImageButton
            android:id="@+id/list4DelBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/list4EditBtn"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/list4DateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/list4DelBtn"
            android:text="@string/date"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            />

    <TextView
        android:id="@+id/list4AmtTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/amount"
        android:layout_toEndOf="@id/list4DateTV"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/list4CatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/category"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toEndOf="@id/list4AmtTV"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list4UpdateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/entry_box"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/list4UpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:text="@string/update"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/entry_box"
            android:contentDescription="@string/edit"
             />

        <Button
            android:id="@+id/list4CancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:background="@drawable/entry_box"
            android:layout_toStartOf="@id/list4UpdateBtn"
            android:contentDescription="@string/delete"
            />

        <EditText
            android:id="@+id/list4AmtET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:hint="@string/amount"
            android:layout_centerVertical="true"
            android:inputType="numberSigned|numberDecimal"
            android:digits="01234567890-"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list4WarnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/entry_box"
        android:orientation="vertical">

    <TextView
        android:id="@+id/list4WarnTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/warning"
        android:textSize="14sp"
        android:textColor="@color/brightRed"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/list4NoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:text="@string/no"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/circle_box"
            android:contentDescription="@string/edit"
            />

        <Button
            android:id="@+id/list4YesBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="@string/yes"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:background="@drawable/circle_box"
            android:layout_toStartOf="@id/list4NoBtn"
            android:contentDescription="@string/delete"
            />

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>

