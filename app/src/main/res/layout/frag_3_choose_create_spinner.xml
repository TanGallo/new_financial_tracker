<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    >

                    <TextView
                        android:id="@+id/frag3ChooseLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/choose_cc"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                <Spinner
                    android:id="@+id/frag3ChooseSpin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/frag3CreateBtn"
                    android:layout_centerVertical="true"
                    android:gravity="fill_horizontal">

                </Spinner>

                        <Button
                            android:id="@+id/frag3CreateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/create"
                            android:layout_alignParentEnd="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:contentDescription="@string/create_cc"
                            android:background="@drawable/entry_box"/>

                    </RelativeLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/frag3ListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>

            </LinearLayout>

</FrameLayout>