<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addSavNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/enter_savings_cat"
                android:labelFor="@id/addSavNameET"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/addSavNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="text"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/addSavAmtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/enter_savings_amount"
                android:labelFor="@id/addSavAmtET"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/addSavAmtET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:digits="01234567890.-"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/addSavPaytLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/enter_savings_payments"
                android:labelFor="@id/addSavPaytET"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>


            <EditText
                android:id="@+id/addSavPaytET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:digits="01234567890.-"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/addSavPercentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/enter_savings_rate"
                android:labelFor="@id/addSavPercentET"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>


            <EditText
                android:id="@+id/addSavPercentET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:digits="01234567890.-"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/percent_sign"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/addSavGoalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/enter_savings_goal"
                android:labelFor="@id/addSavGoalET"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/addSavGoalET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:digits="01234567890.-"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/addSavDateResLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:labelFor="@id/addSavDateResTV"
                android:text="@string/goal_will"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/addSavDateResTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/date"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/addSavCancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/cancel"
                    android:text="@string/cancel"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/addSavSaveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/save"
                    android:text="@string/save"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="RelativeOverlap" />

                <Button
                    android:id="@+id/addSavUpdateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/update"
                    android:text="@string/update"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>