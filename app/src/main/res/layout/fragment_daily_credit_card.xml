<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabFragments.DailyCreditCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noCCTransLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:text="@string/no_debts_message"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ccTransPaymentNotPossibleBText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/payment_not_possible_B"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ccTransPaymentNotPossibleAText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/payment_not_possible_A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ccTransContinueAnywayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/continue_anyway"
                        android:textSize="16sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/ccTransCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:background="@drawable/entry_box"
                        android:contentDescription="@string/cancel"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/ccTransContinueButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:background="@drawable/entry_box"
                        android:contentDescription="@string/continue1"
                        android:gravity="center"
                        android:text="@string/continue1"
                        android:textSize="12sp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/checkBelowLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/check_boxes_below"
                    android:textAlignment="center"
                    android:background="@drawable/entry_box"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/initalCCLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalCCPaymentDueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/pay_this_amount"
                        android:textSize="16sp" />

                    <ScrollView
                        android:id="@+id/listScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:fillViewport="true"
                        >

                        <ListView
                            android:id="@+id/ccPaymentsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            ></ListView>
                    </ScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ccPaidLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_toStartOf="@id/ccPaidCheckbox"
                            android:labelFor="@id/ccPaidCheckbox"
                            android:text="@string/check_box_prompt"
                            android:textSize="14sp"/>

                        <CheckBox
                            android:id="@+id/ccPaidCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ccHeaderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/outstanding_cc_purchases"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ccPayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:text="@string/pay"
                android:textSize="16sp" />

        </RelativeLayout>


        <ListView
            android:id="@+id/ccListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>


</FrameLayout>