<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/analysisSlide1Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_check_white_24dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-70dp"
        android:contentDescription="@string/analysis_adjustments" />

    <TextView
        android:id="@+id/analysisSlide1Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:text="@string/thanks"
        android:layout_below="@id/analysisSlide1Image"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

    <TextView
    android:id="@+id/analysisSlide1Description2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorWhite"
    android:textSize="25sp"
    android:gravity="center_horizontal"
    android:text="@string/b6_text1"
    android:layout_below="@id/analysisSlide1Description"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    />

    <TextView
        android:id="@+id/analysisSlide1Description3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:text="@string/b6_text2"
        android:layout_below="@id/analysisSlide1Description2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

</RelativeLayout>