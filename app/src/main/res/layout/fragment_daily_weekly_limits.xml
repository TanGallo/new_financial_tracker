<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabFragments.DailyWeeklyLimits">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/noWeeklyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:text="Weekly limits are set up in the BUDGET tab."
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/noWeeklyLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="10dp"
                android:text="Mark budget expense items as 'optional' and you will then be asked whether or not you would like to track their spending on a weekly basis."
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/weeklyLimitListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

</FrameLayout>