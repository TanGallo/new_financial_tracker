<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/transferSpinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:layout_below="@id/transferWarnLayout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/transfer_from"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/transferFromSpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="fill_horizontal">

                    </Spinner>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/transfer_to"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/transferToSpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="fill_horizontal">

                    </Spinner>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/transferAmtET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:digits="0123456789-"
                            android:hint="@string/amount"
                            android:inputType="numberDecimal|numberSigned"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/transferBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/entry_box"
                            android:contentDescription="@string/enter"
                            android:text="@string/enter"
                            android:textColor="@color/colorPrimaryDark" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transferWarnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/transferWarnTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/warning"
                        android:textColor="@color/brightRed"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/transferWarnTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/continue_anyway"
                            android:textColor="@color/brightRed"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/transferNoBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/circle_box"
                            android:contentDescription="@string/edit"
                            android:text="@string/no"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/transferYesBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/transferNoBtn"
                            android:background="@drawable/circle_box"
                            android:contentDescription="@string/delete"
                            android:text="@string/yes"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transferFromWarnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical"
                    android:layout_below="@id/transferSpinLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/transferFromWarnTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/choose_split"
                            android:textColor="@color/brightRed"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/transferInfoBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/blue7"
                            android:src="@drawable/ic_info_outline_blue_24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/transferFromWarnTV"
                            android:layout_gravity="end|center_vertical"/>

                        <TextView
                            android:id="@+id/transferInfoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/reserved_includes"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_below="@id/transferInfoBtn"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/transferFromRG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/transferFromResRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/all"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/transferFromAvailRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/none"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/transferFromUsualRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/split_as_usual"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/transferFromCustomRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/custom_split"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark">

                        </RadioButton>

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/transferFromCustomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/transferFromAmtLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/transferFromResET"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:digits="01234567890-"
                                android:inputType="numberSigned|numberDecimal"
                                android:hint="@string/amount"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/from_res"
                                android:textColor="@color/brightRed"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/transferFromAvailLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/transferFromAvailTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/from_avail"
                                android:textColor="@color/brightRed"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/transferFromBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/entry_box"
                        android:contentDescription="@string/enter"
                        android:text="@string/enter"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

                <Button
                    android:id="@+id/transfersDoneBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@id/transferFromWarnLayout"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/done_transfers"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/c1_nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
