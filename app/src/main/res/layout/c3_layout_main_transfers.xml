<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/transferSpinLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/entry_box"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/transfer_from"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/transferFromSpin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="fill_horizontal">

                        </Spinner>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/transfer_to"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/transferToSpin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="fill_horizontal">

                        </Spinner>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/transferAmtET"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:digits="0123456789-"
                                android:hint="@string/amount"
                                android:inputType="numberDecimal|numberSigned"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/transferBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/enter"
                                android:text="@string/enter"
                                android:textColor="@color/colorPrimaryDark" />

                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/transfersDoneBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/transferSpinLayout"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/entry_box"
                        android:text="@string/done_transfers"
                        android:textColor="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:id="@+id/transferResLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/transfersDoneBtn"
                        android:layout_margin="5dp"
                        android:background="@drawable/entry_box"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/transferResTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/choose_split"
                                android:textColor="@color/brightRed"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@+id/transferInfoBtn"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_below="@id/transferResTV"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|center_vertical"
                                android:backgroundTint="@color/blue7"
                                android:src="@drawable/ic_info_outline_blue_24dp" />

                            <TextView
                                android:id="@+id/transferInfoTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/transferInfoBtn"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/reserved_includes"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/transferResRG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/transferAllResRB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/all"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp">

                            </RadioButton>

                            <RadioButton
                                android:id="@+id/transferNoneResRB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/none"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp">

                            </RadioButton>

                            <RadioButton
                                android:id="@+id/transferAsUsualRB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/split_as_usual"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp">

                            </RadioButton>

                            <RadioButton
                                android:id="@+id/transferCustomRB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/custom_split"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp">

                            </RadioButton>

                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/transferCustomLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/transferCustomResAmtLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/transferCustomResAmtET"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:digits="01234567890.-"
                                    android:hint="@string/amount"
                                    android:inputType="numberSigned|numberDecimal"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="@string/from_res"
                                    android:textColor="@color/brightRed"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/transferCustomAvailLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/transferCustomAvailAmtTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="@string/from_avail"
                                    android:textColor="@color/brightRed"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/transferEnterBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/enter"
                                android:text="@string/enter"
                                android:textColor="@color/colorPrimaryDark" />

                            <Button
                                android:id="@+id/transferCancelBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/enter"
                                android:text="@string/cancel"
                                android:textColor="@color/colorPrimaryDark" />


                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/c1_nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>