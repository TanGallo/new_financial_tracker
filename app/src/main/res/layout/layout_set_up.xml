<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LayoutSetUp"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:id="@+id/set_up_layout_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/set_up_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">


                        <TextView
                            android:id="@+id/getStartedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:text="@string/get_started"
                            android:textSize="22sp"
                            android:textColor="@color/colorPrimaryDark"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:alpha=".5"
                            android:background="@color/colorPrimary"></View>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:text="@string/done"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setUpIncomeButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/enter_income"
                                android:text="@string/click_here_begin"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/setUpIncomeLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/enter_income"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                tools:ignore="RelativeOverlap" />

                            <CheckBox
                                android:id="@+id/setUpIncomeCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setUpBillsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/click_here_next"
                                android:text="@string/click_here_next"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/setUpBillsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/enter_bills"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                tools:ignore="RelativeOverlap" />

                            <CheckBox
                                android:id="@+id/setUpBillsCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setUpDebtsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/click_here_debts"
                                android:text="@string/click_here_debts"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/setUpDebtsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/enter_debts"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                tools:ignore="RelativeOverlap" />

                            <CheckBox
                                android:id="@+id/setUpDebtsCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setUpSavingsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/click_here_savings"
                                android:text="@string/click_here_savings"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/setUpSavingsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/enter_savings"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                tools:ignore="RelativeOverlap" />

                            <CheckBox
                                android:id="@+id/setUpSavingsCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setUpBudgetButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/click_here_budget"
                                android:text="@string/click_here_budget"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/setUpBudgetLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/finish_budget"
                                android:textSize="16sp"
                                android:textColor="@color/grey"
                                tools:ignore="RelativeOverlap" />

                            <CheckBox
                                android:id="@+id/setUpBudgetCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setUpAccountAmountLabel3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/starting_balance"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                            android:id="@+id/setUpAccountAmountLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="@string/starting_balance_amount"
                            android:labelFor="@id/setUpAccountAmount"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpAccountAmountLabel4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_below="@id/setUpAccountAmountLabel"
                                android:text="@string/starting_balance_warning"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpAccountAmountLabel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpAccountAmountLabel4"
                                android:layout_marginStart="10dp"
                                android:text="@string/check_box_starting_balance"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <EditText
                                android:id="@+id/setUpAccountAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpAccountAmountLabel2"
                                android:layout_marginStart="10dp"
                                android:layout_toStartOf="@id/setUpAccountCheckbox"
                                android:gravity="fill_horizontal"
                                android:inputType="numberSigned|numberDecimal"
                                android:digits="0123456789.-"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                tools:ignore="Autofill" />

                            <CheckBox
                                android:id="@+id/setUpAccountCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpAccountAmountLabel2"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/almostDone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:text="@string/almost_done"
                            android:textSize="22sp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/setUpTourLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/manage_money"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpTourLabel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpTourLabel"
                                android:layout_margin="10dp"
                                android:text="@string/go_to_daily_money"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpTourLabel3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpTourLabel2"
                                android:layout_margin="10dp"
                                android:text="@string/mynance_will_show_you"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpTourLabel4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpTourLabel3"
                                android:layout_margin="10dp"
                                android:text="@string/go_to_help"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/setUpGotItLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpTourLabel4"
                                android:layout_margin="10dp"
                                android:text="@string/check_box_to_start"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"/>

                            <CheckBox
                                android:id="@+id/setUpTourCheckbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setUpTourLabel4"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp" />

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
