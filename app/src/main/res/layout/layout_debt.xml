<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LayoutDebt"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:id="@+id/debt_layout_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/debt_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/total_owing"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/totalDebtOwing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/amount"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalDebtPaidLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/debt_free_by"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/totalDebtPaidByDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/date"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp" />

                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addDebtButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/add"
                    android:foreground="@drawable/ic_add_white_24dp"
                    android:scaleType="fitCenter"
                    tools:ignore="UnusedAttribute" />

                <Button
                    android:id="@+id/doneDebtsSetUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    android:background="@drawable/entry_box"
                    android:contentDescription="@string/done_debts"
                    android:text="@string/done_debts"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:alpha=".5"
                    android:background="@color/colorPrimary"></View>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emptyDebtsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/no_debts_yet"
                            android:textColor="@color/colorGreen"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/emptyDebtsText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/plus_button_debts"
                            android:textColor="@color/colorGreen"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/emptyDebtsText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/empty_debts_3"
                            android:textColor="@color/colorGreen"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/debtsSetUpNoTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_horizontal"
                            android:text="@string/no_time"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/debtsSetUpNoTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/no_time2"
                            android:textColor="@color/colorGreen"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/debtsSetUpTimeButton"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="10dp"
                            android:background="@drawable/entry_box"
                            android:contentDescription="@string/ok"
                            android:text="@string/ok"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/debtsSetUpNeedHelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_horizontal"
                            android:text="@string/need_help"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/debtsSetUpNeedHelp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/need_help2"
                            android:textColor="@color/colorGreen"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/debtsSetUpHelpButton"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="10dp"
                            android:background="@drawable/entry_box"
                            android:contentDescription="@string/ok"
                            android:text="@string/ok"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/deleteDebtWarningText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/delete_debt_warning"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="18sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/cancelDeleteDebtButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="end"
                                android:layout_margin="5dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/cancel"
                                android:gravity="center"
                                android:text="@string/cancel"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/continueDeleteDebtButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:layout_margin="5dp"
                                android:background="@drawable/entry_box"
                                android:contentDescription="@string/continue1"
                                android:gravity="center"
                                android:text="@string/continue1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                        </RelativeLayout>

                    </LinearLayout>

                </ScrollView>

                <ListView
                    android:id="@+id/debtListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
