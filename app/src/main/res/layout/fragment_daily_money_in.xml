<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabFragments.DailyMoneyIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debtNotPossibleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/not_enough_credit_warning"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/savingsNotPossibleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/not_enough_savings_warning"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/debtContinueAnywayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/continue_anyway"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/yesMoneyInButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@id/noMoneyInButton"
                    android:text="@string/yes"
                    android:textSize="12sp"
                    android:background="@drawable/entry_box"/>

                <Button
                    android:id="@+id/noMoneyInButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/no"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/entry_box"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateMoneyInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/entry_box"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moneyInCatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/category"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/moneyInAmountEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:text="@string/amount"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancelMoneyInEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/entry_box"
                android:text="@string/cancel"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/updateMoneyInEntryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/entry_box"
                android:text="@string/update"
                android:textSize="12sp"/>

        </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/moneyInLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/debt_header_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:alpha=".5"
            android:background="@color/colorPrimary"></View>

        <RelativeLayout
            android:id="@+id/addMoneyInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/entry_box"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/moneyInAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/amount"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>

            <Spinner
                android:id="@+id/moneyInCatSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@id/moneyInButton"
                android:layout_toEndOf="@id/moneyInAmount"
                android:gravity="fill_horizontal">

            </Spinner>

            <Button
                android:id="@+id/moneyInButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:text="@string/enter"
                android:background="@drawable/entry_box"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/moneyInLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/debt_header_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:alpha=".5"
            android:background="@color/colorPrimary"></View>


        <ListView
            android:id="@+id/moneyInList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

</FrameLayout>