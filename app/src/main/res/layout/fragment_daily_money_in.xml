<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabFragments.DailyMoneyIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/debtNotPossibleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/not_enough_credit_warning"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/savingsNotPossibleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/not_enough_savings_warning"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/debtContinueAnywayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/continue_anyway"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <Button
                    android:id="@+id/yesMoneyInButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@id/noMoneyInButton"
                    android:background="@drawable/entry_box"
                    android:contentDescription="@string/yes"
                    android:text="@string/yes"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/noMoneyInButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/entry_box"
                    android:contentDescription="@string/no"
                    android:text="@string/no"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateMoneyInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/entry_box"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moneyInCatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:labelFor="@id/moneyInAmountEditText"
                    android:text="@string/category"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/moneyInAmountEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/amount"
                    android:digits="0123456789.-"
                    android:inputType="numberDecimal|numberSigned"
                    android:text="@string/amount"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cancelMoneyInEntryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:contentDescription="@string/cancel"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/updateMoneyInEntryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:contentDescription="@string/update"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/addMoneyInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/entry_box"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/moneyInAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:digits="0123456789.-"
                android:hint="@string/amount"
                android:inputType="numberDecimal|numberSigned"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:ignore="Autofill" />

            <Spinner
                android:id="@+id/moneyInCatSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@id/moneyInButton"
                android:layout_toEndOf="@id/moneyInAmount"
                android:gravity="fill_horizontal">

            </Spinner>

            <Button
                android:id="@+id/moneyInButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/entry_box"
                android:contentDescription="@string/enter"
                android:text="@string/enter"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </RelativeLayout>


        <ListView
            android:id="@+id/moneyInList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

</FrameLayout>