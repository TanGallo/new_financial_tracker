<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/finalSlide3Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_done_all_white_24dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-70dp"
        android:contentDescription="@string/enter_balance" />

    <TextView
        android:id="@+id/finalSlide3Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:gravity="start"
        android:text="@string/b8_text4"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/finalSlide3ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:gravity="start"
        android:hint="@string/starting_balance"
        android:inputType="numberDecimal|numberSigned"
        android:digits="0123456789.-"
        android:layout_below="@id/finalSlide3Description"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

    <Button
        android:id="@+id/finalSlide3EnterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@id/finalSlide3ET"
        android:background="@drawable/entry_box"
        android:text="@string/enter"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>