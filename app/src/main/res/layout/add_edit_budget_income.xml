<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/budgetIncomeCategoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/enter_income_cat"
                    android:labelFor="@id/budgetIncomeCategory"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/budgetIncomeCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/budgetIncomeAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/amount"
                    android:labelFor="@id/budgetIncomeAmount"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/budgetIncomeAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <TextView
                android:id="@+id/budgetIncomeFrequencyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/how_often"
                android:labelFor="@id/budgetIncomeFrequencyRadioGroup"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>

            <RadioGroup
                android:id="@+id/budgetIncomeFrequencyRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <RadioButton
                    android:id="@+id/budgetIncomeWeeklyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioButton
                    android:id="@+id/budgetIncomeBiWeeklyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bi_weekly"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioButton
                    android:id="@+id/budgetIncomeBiMonthlyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bi_monthly"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioButton
                    android:id="@+id/budgetIncomeMonthlyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioButton
                    android:id="@+id/budgetIncomeBiAnnuallyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bi_annually"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioButton
                    android:id="@+id/budgetIncomeAnnuallyRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yearly"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"/>

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/budgetCancelIncomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/cancel"
                    android:text="@string/cancel"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"/>

                <Button
                    android:id="@+id/budgetAddIncomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/add"
                    android:text="@string/add"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="RelativeOverlap" />

                <Button
                    android:id="@+id/budgetUpdateIncomeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:contentDescription="@string/update"
                    android:text="@string/update"
                    android:background="@drawable/entry_box"
                    android:textColor="@color/colorPrimaryDark"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>