<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/editMoneyCCButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_edit_black_24dp" />

        <ImageButton
            android:id="@+id/deleteMoneyCCButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/editMoneyCCButton"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_delete_black_24dp" />

    <TextView
        android:id="@+id/moneyCCAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/deleteMoneyCCButton"
        android:text="Amount"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/moneyCCCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Category"
        android:textSize="16sp"
        android:layout_toEndOf="@id/moneyCCAmount"/>

        <TextView
            android:id="@+id/moneyCCDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Date"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/moneyCCDebtCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Debt"
            android:textSize="14sp"
            android:layout_below="@id/moneyCCAmount"
            android:layout_toEndOf="@id/moneyCCAmount"
            />

    </RelativeLayout>



</LinearLayout>

