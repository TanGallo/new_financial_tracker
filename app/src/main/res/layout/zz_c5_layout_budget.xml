<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/total_income"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/budTotIncTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/total_reserved"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/budTotExpTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/budHeaderLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/income_available"
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/budHeaderTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorGreen"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/budOverWarnLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/oops"
                        android:textColor="@color/brightRed"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/budOverWarnTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/brightRed"
                        android:textSize="16sp" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/budRepWarnLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/entry_box"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/budRepWarnTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/no_spending_report"
                                android:textColor="@color/brightRed"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Button
                                    android:id="@+id/budRepWarnCancelBtn"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/entry_box"
                                    android:contentDescription="@string/ok"
                                    android:text="@string/cancel"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12sp" />

                                <Button
                                    android:id="@+id/budRepWarnOkBtn"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/entry_box"
                                    android:contentDescription="@string/ok"
                                    android:text="@string/ok"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12sp" />

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        tools:ignore="DisableBaselineAlignment">

                        <LinearLayout
                            android:id="@+id/budIncListLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/budIncListTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_margin="10dp"
                                    android:text="@string/income"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp"
                                    tools:ignore="RelativeOverlap" />

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/budAddIncBtn"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_toEndOf="@id/budIncListTV"
                                    android:layout_margin="10dp"
                                    android:contentDescription="@string/add"
                                    android:foreground="@drawable/ic_add_white_24dp"
                                    android:scaleType="fitCenter"
                                    tools:ignore="UnusedAttribute" />

                            </RelativeLayout>

                            <ListView
                                android:id="@+id/budIncListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                            </ListView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/budExpListLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/budExpListTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_margin="10dp"
                                    android:text="@string/expenses"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp"
                                    tools:ignore="RelativeOverlap" />

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/budAddExpBtn"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_toEndOf="@id/budExpListTV"
                                    android:layout_margin="10dp"
                                    android:contentDescription="@string/add"
                                    android:foreground="@drawable/ic_add_white_24dp"
                                    android:scaleType="fitCenter"
                                    tools:ignore="UnusedAttribute" />

                            </RelativeLayout>

                            <ListView
                                android:id="@+id/budExpListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                            </ListView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/c1_nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
