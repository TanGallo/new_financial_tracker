<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/payCCNoCCTransTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:text="@string/no_debts_message"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/payCCWarnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/payCCWarnTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/warning"
                            android:textColor="@color/brightRed"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/payCCContLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/continue_anyway"
                            android:textColor="@color/brightRed"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/payCCNoContBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="end"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_box"
                            android:contentDescription="@string/no"
                            android:gravity="center"
                            android:text="@string/no"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/payCCYesContBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_box"
                            android:contentDescription="@string/yes"
                            android:gravity="center"
                            android:text="@string/yes"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </LinearLayout>

                    <TextView
                        android:id="@+id/payCCCheckBelowLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/entry_box"
                        android:text="@string/check_boxes_below"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/payCCPaytListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/entry_box"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payCCPaytListLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/pay_this_amount"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:fillViewport="true">

                        <ListView
                            android:id="@+id/payCCPaytListView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></ListView>
                    </ScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/payCCCheckboxLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_toStartOf="@id/payCCCheckbox"
                            android:labelFor="@id/payCCCheckbox"
                            android:text="@string/check_box_prompt"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/payCCCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/payCCToPayHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payCCTransListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/outstanding_cc_purchases"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/payCCTPayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:text="@string/pay"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>


        <ListView
            android:id="@+id/payCCTransListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>


</FrameLayout>